<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="560.0" minWidth="650.0" prefHeight="560.0" prefWidth="650" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EventController">

    <!-- Main Container -->
    <VBox alignment="CENTER" layoutX="50.0" layoutY="42.0" prefWidth="550" spacing="25" AnchorPane.bottomAnchor="42.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="42.0">

        <!-- Autoclicker Toggle Button -->
        <Button fx:id="toggleBtn" onAction="#toggle" text="Enable Autoclicker" />

        <!-- CPS Slider (Clicks per Second) -->
        <VBox alignment="CENTER">
            <Label text="CPS (Clicks per Second)" />
            <Slider fx:id="cpsSlider" max="50" showTickLabels="true" showTickMarks="true" value="10" />
        </VBox>

        <!-- Randomness Slider -->
        <VBox alignment="CENTER">
            <Label text="Randomness" />
            <Slider fx:id="randomnessSlider" min="0" showTickLabels="true" showTickMarks="true" />
        </VBox>

        <!-- Skip Chance Slider -->
        <VBox alignment="CENTER">
            <Label text="Chance of Skipping a Click (%)" />
            <Slider fx:id="skipChanceSlider" min="0" showTickLabels="true" showTickMarks="true" />
        </VBox>

        <!-- Perlin Noise Strength Slider -->
        <VBox alignment="CENTER">
            <Label text="Perlin Noise Strength" />
            <Slider fx:id="perlinNoiseSlider" max="100" min="0" showTickLabels="true" showTickMarks="true" value="10" />
        </VBox>

        <!-- Display Current CPS Button -->
        <VBox alignment="CENTER">
            <Button fx:id="testAreaBtn" onAction="#onTestAreaClick" text="CPS: %s | Total Clicks: %s" />
        </VBox>

    </VBox>

</AnchorPane>
